<odoo>
    <data noupdate="0">
        <record id="module_category_plan_sale_order" model="ir.module.category">
            <field name="name">Phương Án KD</field>
            <field name="sequence">1</field>
        </record>
        
        <record id="group_plan_sale_order_staff" model="res.groups">
            <field name="name">Nhân viên</field>
            <field name="category_id" ref="module_category_plan_sale_order"/>
            <field name = "implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_plan_sale_order_manager" model="res.groups">
            <field name="name">Quản lý</field>
            <field name="category_id" ref="module_category_plan_sale_order"/>
            <field name = "implied_ids" eval="[(4, ref('group_plan_sale_order_staff'))]"/>
        </record>

        <record id="plan_sale_order_access_staff" model="ir.model.access">
            <field name="name">plan.sale.order access for staff</field>
            <field name="model_id" ref="model_plan_sale_order"/>
            <field name="group_id" ref="group_plan_sale_order_staff"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Access rights for Plan Sale Order Manager -->
        <record id="plan_sale_order_access_manager" model="ir.model.access">
            <field name="name">plan.sale.order access for manager</field>
            <field name="model_id" ref="model_plan_sale_order"/>
            <field name="group_id" ref="group_plan_sale_order_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="plan_sale_order_access_staff" model="ir.model.access">
            <field name="name">plan.sale.order access for staff</field>
            <field name="model_id" ref="model_plan_sale_order"/>
            <field name="group_id" ref="group_plan_sale_order_staff"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <!-- Access rights for Plan Sale Order Manager -->
        <record id="plan_sale_order_access_manager" model="ir.model.access">
            <field name="name">plan.sale.order access for manager</field>
            <field name="model_id" ref="model_plan_sale_order"/>
            <field name="group_id" ref="group_plan_sale_order_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
    </data>
    <data noupdate="1">
        <record id = "plan_sale_order_rule_user" model = "ir.rule">
            <field name = "name">Plan Sale Order User</field>
            <field name = "model_id" ref = "model_plan_sale_order"/>
     
            <field name="domain_force">[('state', '!=', 'approved')]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name = "groups" eval = "[(4, ref('group_plan_sale_order_staff'))]"/>
        </record>

    </data>
</odoo>