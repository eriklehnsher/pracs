<odoo>
    <data>
        <record id="crm_team_view_tree" model="ir.ui.view">
            <field name="name">crm.teams.tree</field>
            <field name="model">crm.teams</field>
            <field name="arch" type="xml">
                <tree string="CRM Teams">
                    <field name="team_id" string="nhóm bán hàng"/>
                    <field name="target_jan" invisible="context.get('selected_month') != '1'"/>
                    <field name="target_feb" invisible="context.get('selected_month') != '2'"/>
                    <field name="target_mar" invisible="context.get('selected_month') != '3'"/>
                    <field name="target_apr" invisible="context.get('selected_month') != '4'"/>
                    <field name="target_may" invisible="context.get('selected_month') != '5'"/>
                    <field name="target_jun" invisible="context.get('selected_month') != '6'"/>
                    <field name="target_jul" invisible="context.get('selected_month') != '7'"/>
                    <field name="target_aug" invisible="context.get('selected_month') != '8'"/>
                    <field name="target_sep" invisible="context.get('selected_month') != '9'"/>
                    <field name="target_oct" invisible="context.get('selected_month') != '10'"/>
                    <field name="target_nov" invisible="context.get('selected_month') != '11'"/>
                    <field name="target_dec" invisible="context.get('selected_month') != '12'"/>
                </tree>
            </field>
        </record>
        <record id="action_crm_team_all" model="ir.actions.act_window">
            <field name="name">CRM Team Filter</field>
            <field name="res_model">crm.teams</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="crm_team_view_tree"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_crm_team_filter_all_list" name="CRM Team all" parent="crm.crm_menu_report" action="action_crm_team_all"/>
    </data>
</odoo>