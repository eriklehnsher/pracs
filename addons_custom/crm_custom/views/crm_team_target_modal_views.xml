<odoo>
    <data>
        <record id="view_crm_team_form_inherit" model="ir.ui.view">
            <field name="name">crm.team.form.inherit</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="crm.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='members_users']" position="after">
                    <page string="Chỉ tiêu doanh số theo tháng (trước VAT)" name="target_amount">
                        <field name="target_ids" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="member_ids"/>
                                <field name="month"/>
                                <field name="target_amount"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>