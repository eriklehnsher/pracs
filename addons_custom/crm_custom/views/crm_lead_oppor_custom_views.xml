<odoo>
    <data>
        <record id="crm_lead_oppor_custom_views" model="ir.ui.view">
            <field name="name">crm.lead.tree.oppor</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="html">
                <tree string="Opportunity">
                    <field name="name" string="Cơ Hội"/>
                    <field name="create_date" string="ngày tạo"/>
                    <field name="user_id" string="Nhân viên kinh doanh"/>
                    <field name="team_id" string="Nhóm Bán Hàng"/>
                    <field name="min_revenue" string="Doanh thu tối thiểu"/>
                     <field name="sale_amount_total" widget="monetary" options="{'currency_field': 'company_currency'}" string="Doanh thu thực tế"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>