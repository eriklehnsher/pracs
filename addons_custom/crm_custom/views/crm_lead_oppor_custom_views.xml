<odoo>
    <data>
        <record id="crm_lead_oppor_custom_views" model="ir.ui.view">
            <field name="name">crm.lead.tree.oppor</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="html">
                <tree string="Opportunity">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="sale_amount_total" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                    <field name="min_revenue"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>