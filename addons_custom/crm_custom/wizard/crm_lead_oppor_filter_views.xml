<odoo>
    <data>
        <record id="view_crm_lead_to_oppor_form" model="ir.ui.view">
            <field name="name">crm.lead.oppor.filter.form</field>
            <field name="model">crm.lead.oppor.filter</field>
            <field name="arch" type="xml">
                <form string="Danh sách kế hoạch theo tháng tạo">
                    <group>
                        <field name="month"/>
                    </group>
                    <footer>
                        <button name="action_filter_oppor" string="Xuất Dữ Liệu" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_crm_lead_oppor_filter" model="ir.actions.act_window">
            <field name="name">Tháng</field>
            <field name="res_model">crm.lead.oppor.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem
                id="menu_crm_lead_oppor_filter"
                name="Danh sách kế hoạch theo tháng tạo"
                parent="crm.crm_menu_report"
                action="crm_custom.action_crm_lead_oppor_filter"/>
    </data>
</odoo>