<odoo>
	<data>

        <record id="crm_lead_new_tree" model="ir.ui.view">
			<field name="name">crm.lead.tree.lead</field>
			<field name="model">crm.lead</field>
			<field name="arch" type="xml">
				<tree class="o_lead_opportunity_form" js_class="crm_form">
					<field name="name" string="Opportunity" readonly="1"/>
                    <field name="user_id"/>
                    <field name="team_id"/>
					<field name="min_revenue"/>
				    <field name="create_date"/>
				</tree>
			</field>
		</record>
        <record id="crm_leads_filter" model="ir.ui.view">
			<field name="name">crm.lead.search</field>
			<field name="model">crm.lead</field>
			<field name="arch" type="xml">
				<search string="Search leads">
					<field name="create_date"/>
                    <field name="team_id"/>
                    <separator/>  
                    <filter string="Creation Date" name="filter_creation_date" date="create_date" default_period="this_month"/>  
				</search>
			</field>
		</record>

        <record id="crm_lead_form" model="ir.ui.view">
            <field name="name">crm.lead.form.lead</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="Lead Form">
                    <sheet>
                        <group>
                            <field name="name" string="Lead"/>
                            <field name="min_revenue"/>
                            <field name="create_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>




        
		<record id="action_crm_lead_popup" model="ir.actions.act_window">
			<field name="name">Báo Cáo Chi tiết</field>
			<field name="res_model">crm.lead</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="crm_lead_new_tree" />
        
			<field name="search_view_id" ref="crm_leads_filter" />
		</record>
	</data>
</odoo>
