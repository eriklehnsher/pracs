<odoo>
    <data>
        <record id="view_crm_team_to_form" model="ir.ui.view">
            <field name="name">crm.team.filter.form</field>
            <field name="model">crm.team.filter</field>
            <field name="arch" type="xml">
                <form string="CRM Team Filter">
                    <group>
                        <field name="teams_id"/>
                        <field name="month"/>
                    </group>
                    <footer>
                        <button name="action_apply_filter" string="Xuất Dữ Liệu" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_crm_team_filter" model="ir.actions.act_window">
            <field name="name">CRM Team Filter</field>
            <field name="res_model">crm.team.filter</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_crm_team_filter" name="CRM Team Filter" parent="crm.crm_menu_report" action="action_crm_team_filter"/>
    </data>
</odoo>