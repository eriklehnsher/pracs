<?xml version="1.0"?>
<odoo>
	<data>
        <record id="crm_lead_popup_form_view" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="Crm Lead">
                    <group>
                        <field name="company_id"/>
                        <field name="team_id"/>
           
                        <field name="create_month"/>
                        
                    </group>
                    <footer>
                        <button name="action_export_crm_lead_data"  string="Export Data" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="crm_lead_popup_tree_view" model="ir.ui.view">
            <field name="name">crm.lead.tree</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree string="Crm Leads">
                        <field name="name"/>
                        <field name="team_id"/>
                        <field name="user_id"/>
                        <field name="create_date"/>
                        <field name="min_revenue"/>
      
                </tree>
            </field>
        </record>
        <record id="action_open_crm_lead_popup" model="ir.actions.act_window">
            <field name="name">Export Data</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="crm_lead_popup_tree_view"/>
           
        </record>
	</data>
</odoo>
