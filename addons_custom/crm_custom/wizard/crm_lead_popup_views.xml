<odoo>
    <data>
        <record id='crm_lead_popup_form' model='ir.ui.view'>
            <field name='name'>crm.lead.form</field>
            <field name='model'>crm.lead</field>
            <field name='arch' type='xml'>
                <form string="Lead Popup">
                    <sheet>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="team_id"/>
                            <field name='create_month'/>
                        </group>
                <footer>
                    <button name="action_report_lead_specific_fields" string="Xuất dữ liệu" type="object" class="oe_highlight"/>
                    <button string="Hủy" class="oe_link" special="cancel"/>
                </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_report_lead_specific_fields" model="ir.actions.report">
            <field name="name">Leads Report</field>
            <field name="model">crm.lead</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">crm_custom.report_lead_specific_fields_template</field>
            <field name="print_report_name">'Lead_Report_' + object.name</field>
            <field name="groups_id" eval="[(6, 0, [ref('base.group_user')])]"/>
        </record>

        <record id='action_open_crm_lead_popup' model='ir.actions.act_window'>
            <field name='name'>Lead Popup</field>
            <field name='res_model'>crm.lead</field>
            <field name='view_mode'>form</field>
            <field name='target'>new</field>
            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'form', 'view_id': ref('crm_lead_popup_form')})]"/>
<!--             <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_lead_popup_tree')})]"/>-->
        </record>

        <menuitem
        id="custom_crm_export_data"
        name="Export Data"
        parent="crm.crm_menu_report"
        action="crm_custom.action_open_crm_lead_popup"
        />
    </data>
</odoo>