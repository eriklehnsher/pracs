<odoo>
    <data>
        <record id='crm_lead_popup_form' model='ir.ui.view'>
            <field name='name'>crm.lead.form</field>
            <field name='model'>crm.lead</field>
            <field name='arch' type='xml'>
                <form string="Lead Popup">
                    <sheet>
                        <group>

                            <field name="company_id" invisible="1"/>
                            <field name="team_id"/>
                            <field name='create_month'/>
                        </group>
<!--                <footer>-->
<!--                    <button name="action_export_crm_lead_data" string="Xuất dữ liệu" type="object" class="oe_highlight"/>-->
<!--                    <button string="Hủy" class="oe_link" special="cancel"/>-->
<!--                </footer>-->
                    </sheet>
                </form>
            </field>
        </record>
        <record id="crm_lead_popup_tree" model="ir.ui.view">
            <field name="name">crm.lead.tree.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree string="Lead Popup">
                       <header>
                        <button name="action_export_crm_lead_data" string="Xuất dữ liệu" type="object" class="oe_highlight" context="{'selected_month': create_month}"/>
                        <button string="Hủy" class="oe_link" special="cancel"/>
                    </header>
                    <field name="name"/>
                    <field name="company_id" invisible="1"/>
                    <field name="user_id"/>
                    <field name="team_id"/>
                    <field name='create_month'/>
                    <field name="min_revenue"/>

                </tree>
            </field>
        </record>
        <record id='action_open_crm_lead_popup' model='ir.actions.act_window'>
            <field name='name'>Lead Popup</field>
            <field name='res_model'>crm.lead</field>
            <field name='view_mode'>form,tree</field>
            <field name='target'>new</field>
<!--            <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'form', 'view_id': ref('crm_lead_popup_form')})]"/>-->
             <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_lead_popup_tree')})]"/>
        </record>

        <menuitem
        id="custom_crm_export_data"
        name="Export Data"
        parent="crm.crm_menu_report"
        action="crm_custom.action_open_crm_lead_popup"
        />
    </data>
</odoo>