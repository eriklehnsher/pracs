<odoo>
	<data noupdate="0">
        <record id="group_sales_staffs" model="res.groups">
            <field name="name">Sales Staff</field>
            <field name="category_id" ref="base.module_category_sales_sales" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_sales_team_leader" model="res.groups">
            <field name="name">Sales Staffs</field>
            <field name="category_id" ref="base.module_category_sales_sales" />
            <field name="implied_ids" eval="[(4, ref('group_sales_staffs'))]" />
        </record>

        <record id="group_sales_manager" model="res.groups">
            <field name="name">Sales Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales" />
            <field name="implied_ids" eval="[(4, ref('group_sales_team_leader'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>
    </data>

    
</odoo>
