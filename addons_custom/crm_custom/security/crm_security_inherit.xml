<odoo>
    <data>
        <record id="group_crm_staff" model="res.groups">
            <field name="name">CRM Staff</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <record id="group_crm_manager" model="res.groups">
            <field name="name">CRM Leader</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <record id="group_crm_director" model="res.groups">
            <field name="name">CRM Manager</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
        </record>

        <record id="crm_rule_staff_lead" model="ir.rule">
            <field name="name">Staff Leads</field>
            <field ref="model_crm_lead" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('group_crm_staff'))]"/>
        </record>
    
        <record id="crm_rule_leader_lead" model="ir.rule">
            <field name="name">Leader Leads</field>
            <field ref="model_crm_lead" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_crm_leader'))]"/>
        </record>
    
        <record id="crm_rule_manager_lead" model="ir.rule">
            <field name="name">Manager Leads</field>
            <field ref="model_crm_lead" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_crm_manager'))]"/>
        </record>
    </data>
</odoo>